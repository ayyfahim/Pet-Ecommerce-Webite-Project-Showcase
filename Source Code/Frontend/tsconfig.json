{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "app/*": ["./app/*"],
      "hooks/*": ["./app/hooks/*"],
      "requests/*": ["./app/requests/*"],
      "schemas/*": ["./app/schemas/*"],
      "types/*": ["./app/types/*"],
      "contexts/*": ["./app/contexts/*"],
      "public/*": ["./public/*"],
      "layouts/*": ["./layouts/*"],
      "features/*": ["./features/*"],
      "components/*": ["./components/*"],
      "shared/*": ["./shared/*"],
      "styles/*": ["./styles/*"],
      "atom/*": ["./app/atom/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/InstagramFollow.js",
    "components/InstagramFollow.js",
    "pages/account/edit.js",
    "pages/privacy-policy/index.js",
    "pages/add-pet/index.js",
    "pages/api/contact-api.js"
  ],
  "exclude": ["node_modules"]
}
